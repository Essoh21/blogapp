<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Simple blog <%= title %></title>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100;0,200;1,100&display=swap");
    body {
      max-width: 1200px;
      margin: 20px auto;
      padding: 0 20px;
      font-family: "Noto serif", serif;
    }
    p,
    h1,
    h2,
    ul,
    a,
    h3 {
      margin: 0;
      padding: 0;
      text-decoration: none;
      color: #222;
    }
    nav {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
    nav ul {
      display: flex;
    }
    nav li {
      list-style-type: none;
      margin-left: 20px;
    }
    nav h1 {
      font-size: 3em;
    }
    nav p,
    nav a {
      color: #704f4a;
      font-weight: 300;
    }
    footer {
      color: #704f4a;
      text-align: center;
      margin: 80px auto 20px;
    }
    h2 {
      margin-bottom: 40px;
    }

    h3 {
      text-transform: capitalize;
      margin-bottom: 8px;
    }
    .content {
      margin-left: 20px;
    }
    .create-blog form {
      max-width: 400px;
      margin: 0 auto;
    }
    .create-blog input,
    .create-blog textarea {
      display: block;
      width: 100%;
      margin: 10px 0;
      padding: 8px;
    }
    .create-blog label {
      display: block;
      margin-top: 1em;
    }
    textarea {
      height: 20px;
    }
    .create-blog button {
      margin-top: 20px;
      color: white;
      background-color: #777;
      font-size: medium;
      padding: 1em;
      border: 1px solid;
      border-radius: 1px;
    }
  </style>
</head>
